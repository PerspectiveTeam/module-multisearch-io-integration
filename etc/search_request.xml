<?xml version="1.0"?>

<requests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:framework:Search/etc/search_request.xsd">
    <request query="multisearch_io_search" index="multisearch_io_search">
        <dimensions>
            <dimension name="scope" value="default"/>
        </dimensions>
        <queries>
            <query xsi:type="boolQuery" name="multisearch_io_search" boost="1">
                <queryReference clause="should" ref="search_main" />
                <queryReference clause="should" ref="is_deletion" />
                <queryReference clause="must" ref="price"/>
                <queryReference clause="must" ref="category"/>

            </query>
            <query xsi:type="matchQuery" value="$search_term$" name="search_main">
                <match field="*"/>
            </query>
            <query xsi:type="matchQuery" value="$is_deletion_term$" name="is_deletion">
                <match field="*"/>
            </query>
            <query xsi:type="filteredQuery" name="price">
                <filterReference clause="must" ref="price_filter"/>
            </query>
            <query xsi:type="filteredQuery" name="category">
                <filterReference clause="must" ref="category_filter"/>
            </query>
        </queries>
        <filters>
            <filter xsi:type="rangeFilter" name="price_filter" field="price" from="$price.from$" to="$price.to$"/>
<!--            Це фільтр по категоріях-->
            <filter xsi:type="termFilter" name="category_filter" field="t" value="$t$"/>
        </filters>
        <from>0</from>
        <size>10000</size>
    </request>
</requests>
